{
  "name": "yoyo-clicker",
  "displayName": "YoYo Clicker",
  "version": "0.0.1",
  "description": "An extension to add UI to Youtube for judging YoYo performances.",
  "author": "<evan@good-meowning.com>",
  "scripts": {
    "dev-c": "plasmo dev --target=chrome-mv3",
    "dev-f": "plasmo dev --target=firefox-mv2",
    "run-c": "web-ext --source-dir='./build/chrome-mv3-dev' run --target='chromium'",
    "run-f": "web-ext --source-dir='./build/firefox-mv2-dev' run --target='firefox-desktop'",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.83.0",
    "svelte": "4.2.1",
    "svelte-preprocess": "5.0.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@types/chrome": "0.0.245",
    "@types/firefox": "0.0.32",
    "@types/node": "20.5.9",
    "prettier": "3.0.3",
    "typescript": "5.2.2",
    "web-ext": "^7.8.0"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs"
    ]
  }
}
